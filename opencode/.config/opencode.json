{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "ramalama (local)",
      "options": {
        "baseURL": "http://0.0.0.0:8080/v1"
      },
      "models": {
        "unsloth/gpt-oss-120b": {
          "name": "Unsloth gpt-oss (local)"
        }
      }
    }
  },
  "mcp": {
    "linux-mcp-server": {
      "type": "local",
      "command": ["/home/linuxbrew/.linuxbrew/bin/linux-mcp-server"],
      "enabled": true,
      "environment": {
        "LINUX_MCP_USER": "juha"
      }
    }
  }
}
